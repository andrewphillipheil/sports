<style>
.ported-sign-in {
	display:none!important;	
}
</style>
<section id="sign-in-content" class="wrapper-md animated fadeInUp">
	<%= link_to "sportizen", root_path, :class => "nav-brand", :style => "color:#fff;" %>
	<div class="row m-n">
	  <div class="col-md-4 col-md-offset-4 m-t-lg">
	    <section class="panel">
	      <header class="panel-heading text-center">
	        Sign In
	      </header>
		  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "panel-body" }) do |f| %>
		    <div><%= f.label :email %><br />
		    <%= f.email_field :email, :class => "input devise-signup", :autofocus => true %></div>

		    <div><%= f.label :password %><br />
		    <%= f.password_field :password, :class => "input devise-signup" %></div>

		    <% if devise_mapping.rememberable? -%>
		      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		    <% end -%>

		    <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
		  <% end %>
		  <div class="panel-footer">
			 <%= render "devise/shared/links" %>
		  </div>
	    </section>
	  </div>
	</div>
</section> 