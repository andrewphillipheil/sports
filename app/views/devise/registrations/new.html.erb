<style>
#not-signed-in {
	display:none;	
}
</style>
<section id="sign-in-content" class="wrapper-md animated fadeInUp">
	<a class="nav-brand" href="index.html" style="color:#fff;">sportizen</a>
	<div class="row m-n">
	  <div class="col-md-4 col-md-offset-4 m-t-lg">
	    <section class="panel">
	      <header class="panel-heading text-center">
	        Sign Up
	      </header>
	    	 <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "panel-body" }) do |f| %>
				  <%= devise_error_messages! %>

				  <div><%= f.label :email %><br />
				  <%= f.email_field :email, :autofocus => true, :class => "devise-signup input" %></div>

				  <div><%= f.label :password  %><br />
				  <%= f.password_field :password, :class => "devise-signup input" %></div>

				  <div><%= f.label :password_confirmation  %><br />
				  <%= f.password_field :password_confirmation, :class => "devise-signup input" %></div>

				  <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
			<% end %>
			<div class="panel-footer">
					<%= render "devise/shared/links" %>
			</div>
	    </section>
	  </div>
	</div>
</section>
