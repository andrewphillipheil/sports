<style>
.ported-sign-in {
	display:none!important;	
}
</style>
<section id="sign-up-content" class="wrapper-md animated fadeInUp">
	<%= link_to "sportizen", root_path, :class => "nav-brand", :style => "color:#fff;" %>
	<div class="row m-n">
	  <div class="col-md-4 col-md-offset-4 m-t-lg">
	    <section class="panel">
	      <header class="panel-heading text-center">
	        Sign Up
	      </header>
	    	 <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "panel-body" }) do |f| %>
				  <%= devise_error_messages! %>

				  <div><%= f.label :name %><br />
				  <%= f.text_field :name, :autofocus => true, :class => "devise-signup input" %></div>

				  <div><%= f.label :username %><br />
				  <%= f.text_field :username, :autofocus => true, :class => "devise-signup input" %></div>

				  <div><%= f.label :location %><br />
				  <%= f.text_field :location, :autofocus => true, :class => "devise-signup input" %></div>

				  <div><%= f.label :email %><br />
				  <%= f.email_field :email, :autofocus => true, :class => "devise-signup input" %></div>

				  <div><%= f.label :password  %><br />
				  <%= f.password_field :password, :class => "devise-signup input" %></div>

				  <div><%= f.label :password_confirmation  %><br />
				  <%= f.password_field :password_confirmation, :class => "devise-signup input" %></div>

				  <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
			<% end %>
			<div class="panel-footer">
					<%= render "devise/shared/links" %>
			</div>
	    </section>
	  </div>
	</div>
</section>
